/* miniprogram/pages/liferestart/property.wxss */
page{
    padding: 0;
}
.container {
  justify-content: center;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #222831;
  padding: 50rpx 30rpx;
  width: 100%;
  height: 100%;
}
.list{
    background-color: white;
    padding: 20rpx 30rpx;
    margin-top: 50rpx;
}
.li{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
}
.li .txt{
    font-size: 36rpx;
}
.number{
    display: flex;
    align-items: center;
}
.number .edit{
    width: 80rpx;
    height: 60rpx;
    line-height: 50rpx;
    border: 1rpx solid #e5e5e5;
    color: #6495ed;
    font-size: 40rpx;
}
.number .edit.on{
    color: #c5c5c5;
}
.number .inner{
    border-left: none;
    border-right: none;
    font-size: 36rpx;
    line-height: 60rpx;
    color: #222831;
}
.btnB {
  width: 100% !important;
  color: white;
  font-size: 32rpx;
  font-weight: normal;
  background-color: #2aa3f3;
  margin: 20rpx 0;
}
.btnG{
  background-color: #06ad38;
}
.text-center{
    text-align: center;
}
.title1 {
  font-size: 65rpx;
  color: white;
  background-size: cover;
}

.title2 {
  font-size: 40rpx;
  color: white;
  background-size: cover;
  margin-top: 30rpx;
}

.input {
  width: 120rpx !important;
  border-color: transparent !important;
}

.sub,
.add {
  width: 52rpx !important;
  border: 2rpx solid #ececec !important;
  border-radius: 10rpx !important;
}

.talentsTable{
  width: 100%;
  position: relative;
  display: inline-block;
  margin: 30rpx 0;
  font-size: 36rpx;
  text-align: center;
  border-radius: 0.2rem;
  color: white;
  border: #f8f8f8 1rpx solid;
  overflow: hidden;
}

.itemli{
    border-bottom: #f8f8f8 1rpx solid;
    padding: 15rpx 0;
}
.itemli:last-child{
    border: none;
}
.grade0b {
	background-color: #464646;
}
.grade1b {
	background-color: #6495ed;
}
.grade2b {
	background-color: #e2a7ff;
}
.grade3b {
	background-color: #ffa07a;
}
