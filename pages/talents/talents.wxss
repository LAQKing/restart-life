/* miniprogram/pages/liferestart/index.wxss */

page{
    padding: 0;
}
.container {
    box-sizing: border-box;
    background-color: #222831;
    width: 100%;
    min-height: 100vh;
    padding: 30rpx;
}

.checkbox {
    position: static !important;
}

.scrollBox{
    height: calc(100vh - 350rpx);
    position: relative;
    background-color: white;
    padding: 30rpx;
}
.scroll{
    height:calc(100% - 100rpx - env(safe-area-inset-bottom));
    width:100%;
    display: flex;
    flex-direction: column;
}

.liBox{
    padding: 20rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
    text-align: left;
    position: relative;
    font-size: 34rpx;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.iconsuccess{
    margin-right: 15rpx;
}

.btnBox{
    width: 80% !important;
    height: 80rpx;
    color: white;
    background-color: #34abf0;
    font-style: normal;
    font-size: 36rpx;
    border-radius: 0;
    position: absolute;
    left: 10%;
    bottom: calc(15rpx + env(safe-area-inset-bottom));
}

.tiptxt{
    font-size: 36rpx;
    margin-bottom: 30rpx;
    color: white;
    height: 60rpx;
}

.title1 {
    font-size: 75rpx;
    color: white;
    margin-bottom: 50rpx;
    background-size: cover;
    height: 95rpx;
    text-align: center;
}

.title2 {
    font-size: 42rpx;
    color: white;
    background-size: cover;
}

.main {
    border-style: solid;
    border: 1px #ccc solid;
    border-width: 2px 2px;
    border-radius: 0.2rem;
    margin-top: 10px;
    color: #fff;
}

.item {
    font-size: 32rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    padding: 0 10px;
}

.btn-view {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.btn {
    width: 350rpx;
    height: 350rpx;
    background-image: -webkit-radial-gradient(45px 45px, circle cover, #72c6f7, #0381ca);
    animation-name: spin;
    animation-duration: 3s;
    /* 3 seconds */
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    border-radius: 50%;
    margin: 30rpx 0;
}

.btn-text {
    text-align: center;
    font-size: 65rpx;
    line-height: 350rpx;
    color: white;
}

.check{
    display: none;
}

.grade0b {
    background-color: #464646;
